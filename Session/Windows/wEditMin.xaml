<Window x:Class="Session.Windows.wEditMin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Изменить минимальное количество" SizeToContent="WidthAndHeight" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="15">
            <TextBlock Text="Изменить минимальное количество на..."/>
            <TextBox x:Name="tbValue" Width="250" Margin="0,5" KeyDown="tbValue_KeyDown"/>
            <Button Content="Изменить" Click="Button_Click" Margin="150,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
